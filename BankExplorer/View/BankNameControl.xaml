<ContentControl x:Class="BankExplorer.View.BankNameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BankExplorer.View"
             mc:Ignorable="d" 
             xmlns:viewmodels="clr-namespace:BankExplorer.ViewModels" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Style="{StaticResource ResourceKey=BlackNavy}">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Bank " FontSize="100"/>
            <TextBox FontSize="100" Text="{Binding BankName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource EditingCellTextBox}" BorderThickness="0" 
                     Background="Transparent"/>
        </StackPanel>
    </Grid>
</ContentControl>
